<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="textview_general_white">
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/somatic</item>
  </style>

  <style name="textview_big" parent="textview_general_white">
    <item name="android:textSize">@dimen/text_30</item>
  </style>

  <style name="textview_header" parent="textview_big">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="textview_medium" parent="textview_general_white">
    <item name="android:textSize">@dimen/text_20</item>
  </style>

  <style name="bottom_sheet_dialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@color/white</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
    <item name="android:windowIsFloating">false</item>
  </style>

</resources>