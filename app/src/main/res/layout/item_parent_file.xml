<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/spacing_10"
    android:paddingHorizontal="@dimen/spacing_5"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">

  <ImageView
      android:id="@+id/iv_path"
      android:layout_width="@dimen/image_15"
      android:layout_height="@dimen/image_15"
      android:layout_gravity="center_vertical"
      android:src="@drawable/ic_arrow_right"
      tools:ignore="contentDescription"/>

  <TextView
      android:id="@+id/tv_parent_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/spacing_10"
      android:textColor="@color/black"
      tools:text="parent file"/>

</LinearLayout>